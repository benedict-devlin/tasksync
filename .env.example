# Configuration template for TaskSync
# Copy this file to .env and fill in your credentials

# Google Tasks Configuration
# Path to Google OAuth2 credentials JSON file
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Only sync tasks created after this date (ISO format: YYYY-MM-DD or YYYY-MM-DDTHH:MM:SS)
# Leave empty to sync all tasks
# Example: 2026-02-01 (to sync tasks created on Feb 1, 2026 and later)
TASKS_CREATED_AFTER=

# Todoist Configuration
# API token from https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_api_token_here

# Sync Configuration
# Interval between syncs in seconds (minimum 5)
SYNC_INTERVAL=300

# Whether to sync completed tasks (true/false)
SYNC_COMPLETED_TASKS=true

# Skip syncing task descriptions (true/false)
SKIP_DESCRIPTIONS=false

# Enable dry-run mode to test without making changes (true/false)
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
